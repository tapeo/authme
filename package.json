{
  "name": "@tapeo/authme",
  "version": "2.7.1",
  "description": "A TypeScript library for JWT authentication with MongoDB and Express.js. It provides a complete authentication system including local authentication, Google OAuth, password reset, and JWT token management.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src/public"
  ],
  "scripts": {
    "dev": "nodemon --watch src --ext ts,json --exec 'ts-node -r tsconfig-paths/register src/index.ts || exit 1'",
    "build": "tsc && copyfiles -u 2 \"src/public/*.html\" dist/public",
    "prepare": "npm run build"
  },
  "keywords": [
    "express",
    "middleware",
    "typescript",
    "jwt",
    "mongodb",
    "authentication",
    "authorization",
    "password reset",
    "google oauth"
  ],
  "author": "Matteo Ricupero",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "axios": "^0.27.2",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.1",
    "node-telegram-bot-api": "^0.66.0",
    "nodemailer": "^6.10.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.3",
    "@types/node-fetch": "^2.6.11",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/nodemailer": "^6.4.17",
    "copyfiles": "^2.4.1",
    "eslint": "^9.20.0",
    "globals": "^15.14.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.23.0"
  },
  "ts-node": {
    "esm": true,
    "require": [
      "tsconfig-paths/register"
    ]
  }
}